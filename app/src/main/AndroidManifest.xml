<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Indica que la aplicación no requiere el uso de hardware de telefonía -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <!-- Permisos necesarios para la aplicación -->
    <!-- Permiso para acceso a internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Permiso para enviar SMS -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <!-- Permisos relacionados con Bluetooth -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logo_principal"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_principal"
        android:supportsRtl="true"
        android:theme="@style/Theme.Delgado_VictorIMDbAPP"
        tools:targetApi="31">

        <!-- Actividad para los detalles de la película -->
        <activity
            android:name=".MovieDetailsActivity"
            android:exported="false"
            android:screenOrientation="portrait"
            tools:ignore="DiscouragedApi,LockedOrientationActivity" /> <!-- Bloquea orientación en modo vertical -->

        <!-- Actividad de inicio de sesión -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:ignore="DiscouragedApi,LockedOrientationActivity"> <!-- Bloquea orientación en modo vertical -->
            <intent-filter>
                <!-- Define esta actividad como punto de entrada -->
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad principal -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Delgado_VictorIMDbAPP.NoActionBar"
            tools:ignore="DiscouragedApi,LockedOrientationActivity"> <!-- Bloquea orientación en modo vertical -->
            <intent-filter>
                <!-- Define esta actividad como punto de entrada -->
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Actividad para mostrar la lista de películas -->
        <activity
            android:name=".MovieListActivity"
            android:screenOrientation="portrait"
            tools:ignore="DiscouragedApi,LockedOrientationActivity" /> <!-- Bloquea orientación en modo vertical -->
    </application>

</manifest>